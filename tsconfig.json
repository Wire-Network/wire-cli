{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "lib": ["es2015"],
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "outDir": "lib",
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }